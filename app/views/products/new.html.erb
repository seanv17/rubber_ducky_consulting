<div id="forms">
  <div class="container">
  <h4>Create a New Product</h4>
    <div class="row">
      <div class="col-xs-10">
        <%= form_for(@product, :html => {class: "form-horizontal", role: "form"}) do |f| %>
          <div class="form-group">
            <div class="control-label col-sm-2">
              <%= f.label :name %>
            </div>
            <div class="col-sm-4">
              <%= f.text_field :name, class: "form-control", placeholder: "Name", autofocus: true %>
            </div>
          </div>
          <div class="form-group">
            <div class="control-label col-sm-2">
              <%= f.label :description %>
            </div>
            <div class="col-sm-4">
              <%= f.text_area :description, rows: 5, class: "form-control", placeholder: "Description" %>
            </div>
          </div>
          <div class="form-group">
            <div class="control-label col-sm-2">
              <%= f.label :price %>
            </div>
            <div class="col-sm-4">
              <%= f.text_field :image, class: "form-control", placeholder: "Duration" %>
            </div>
          </div>
          <div class="form-group">
            <div class="control-label col-sm-2">
              <%= f.label :submit %>
            </div>
            <div class="col-sm-4">
            <%= f.submit "Submit", class: "btn btn-primary" %>
            <%= link_to "Cancel", :back, class: "btn btn-default" %>
            </div>
          </div>
        <% end %>
      </div>
    </div><!--closes row-->
  </div><!--closes container-->
</div><!--closes forms-->

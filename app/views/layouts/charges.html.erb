<!DOCTYPE html>
<html>
<head>
  <title>RubberDuckyStore</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <!--Import Google Icon Font-->
  <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <!--Import materialize.css-->
  <link type="text/css" rel="stylesheet" href="assets/materialize.css"  media="screen,projection"/>

  <!--Let browser know website is optimized for mobile-->
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

</head>
<body>
  <!-- NAVBAR starts here -->
  <nav>
    <div class="nav-wrapper">
      <%= link_to "RDC", root_path, class: "brand-logo", :"data-no-turbolink" => true %>
      <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons">menu</i></a>
      <ul class="right hide-on-med-and-down">
        <%if user_signed_in? %>
        <li><%= link_to "Invoices", invoices_path %></li>
        <li><%= link_to "Pay", new_charge_path %></li>
        <li><%= link_to "Logout", destroy_user_session_path, :method => :delete %></li>
        <% else %>
        <li><a href="sass.html">Services</a></li>
        <li><a href="collapsible.html">Inquire</a></li>
        <li><%= link_to "Login", new_user_session_path %></li>
        <% end %>
      </ul>
      <ul class="side-nav" id="mobile-demo">
        <%if user_signed_in? %>
        <li><%= link_to "Invoices", invoices_path %></li>
        <li><%= link_to "Pay", new_charge_path %></li>
        <li><%= link_to "Logout", destroy_user_session_path, :method => :delete %></li>
        <% else %>
        <li><a href="sass.html">Services</a></li>
        <li><a href="badges.html">Inquire</a></li>
        <li><%= link_to "Login", new_user_session_path %></li>
        <% end %>
      </ul>
    </div>
  </nav>

  <!--Import jQuery before materialize.js-->
  <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
  <script type="text/javascript" src="assets/materialize.js"></script>

<!-- <p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p> -->

<%= yield %>

</body>
</html>
